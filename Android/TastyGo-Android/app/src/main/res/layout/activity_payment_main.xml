<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".activity.Payment_MainActivity"
    android:background="#F5F5F5">




    <TextView
        android:id="@+id/resName"
        android:layout_margin="5dp"
        android:text="resname "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>



    <TextView
        android:id="@+id/deliveryName"
        android:layout_margin="5dp"
        android:text="deliveryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/orderAddress"
        android:layout_margin="5dp"
        android:text="orderaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/orderStatus"
        android:layout_margin="5dp"
        android:text="orderstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/orderTime"
        android:layout_margin="5dp"
        android:text="ordertime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/deliveryTime"
        android:layout_margin="5dp"
        android:text="deliveryTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/totalAmount"
        android:layout_margin="5dp"
        android:text="totalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background"
        android:padding="6dp"/>








</LinearLayout>